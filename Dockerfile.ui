# Dockerfile for deep-agents-ui
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy UI files
COPY ui/package*.json ./

# Install dependencies
RUN npm ci

# Copy the rest of the UI files
COPY ui/ .

# Skip build for now due to linting errors in upstream
# Will run in dev mode instead

# Expose port for Next.js
EXPOSE 3000

# Run the Next.js server in development mode
CMD ["npm", "run", "dev"]
