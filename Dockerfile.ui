# Dockerfile for deep-agents-ui
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy UI files
COPY ui/package*.json ./

# Install dependencies
# Use npm install to allow lockfile update during container build
RUN npm install --no-audit --no-fund

# Copy the rest of the UI files
COPY ui/ .

# Set build-time environment variables for Next.js
# These NEXT_PUBLIC_ variables are embedded in the build
ENV NODE_ENV=production
ENV NEXT_PUBLIC_DEPLOYMENT_URL=http://server:2024
ENV NEXT_PUBLIC_AGENT_ID=learning_agent

# Build Next.js app for production
RUN npm run build

# Expose port for Next.js
EXPOSE 3000

# Run the Next.js server in production mode
CMD ["npm", "run", "start"]
