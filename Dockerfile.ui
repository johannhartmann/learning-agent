# Dockerfile for deep-agents-ui
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy UI files
COPY ui/package*.json ./

# Install dependencies
RUN npm ci

# Copy the rest of the UI files
COPY ui/ .

# Build the Next.js application
RUN npm run build

# Expose port for Next.js
EXPOSE 3000

# Run the Next.js server
CMD ["npm", "start"]
